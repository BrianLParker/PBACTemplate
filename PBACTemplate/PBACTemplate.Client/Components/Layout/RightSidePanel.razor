@using Microsoft.FluentUI.AspNetCore.Components
@implements IDialogContentComponent<PanelOptions>

@code {
    private string? currentUrl;

    [Inject]
    private INavigationService NavigationService { get; set; } = default!;

    [Parameter]
    public PanelOptions Content { get; set; } = default!;

    protected override void OnInitialized()
    {
        currentUrl = NavigationService.ToBaseRelativePath(NavigationService.Uri);
        NavigationService.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationService.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationService.LocationChanged -= OnLocationChanged;
    }
}
