@using Microsoft.FluentUI.AspNetCore.Components
@rendermode RenderMode.InteractiveWebAssembly
<AppButton Appearance="ButtonAppearance.Subtle" OnClick="OpenPanelLeftAsync">
    <AppIcon Icon="Icons.Size20.Menu" />
</AppButton>
@code {
    [Inject]
    private IDialogService DialogService { get; set; } = default!;

    private IDialogReference? _dialog;
    private readonly PanelOptions panelOptions = new()
    {
        
    };
    private async Task OpenPanelLeftAsync()
    {
        DialogParameters<PanelOptions> parameters = new()
        {
            Content = panelOptions,
            Alignment = HorizontalAlignment.Right,
            Title = "Hello",
            PrimaryAction = "Yes",
            SecondaryAction = "No",
        };
        _dialog = await DialogService.ShowPanelAsync<RightSidePanel>(panelOptions, parameters);
        DialogResult result = await _dialog.Result;
    }
}
