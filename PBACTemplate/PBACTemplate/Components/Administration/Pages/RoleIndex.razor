@page "/Administration/Roles"

<AppPageHeader Title="Roles" />


@if (Roles == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="grid">
        <div class="head">Id</div>
        <div class="head">Name</div>
        @foreach (var role in Roles)
        {
            <div>@role.Id</div>
            <div>@role.Name</div>
        }
    </div>
}
